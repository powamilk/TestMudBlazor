@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Confirm Deletion</MudText>
        <MudText>Are you sure you want to delete <strong>@ItemName</strong>?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="ConfirmDelete">Delete</MudButton>
        <MudButton OnClick="CancelDelete">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public string ItemName { get; set; } = "item"; 

    private void ConfirmDelete()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void CancelDelete()
    {
        MudDialog.Cancel();
    }
}
